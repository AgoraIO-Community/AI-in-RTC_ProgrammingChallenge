			<learn>sex.aiml</learn>
			<learn>sturobot.aiml</learn>
			
            <!-- 你可以在这里添加更多的aiml文件 -->
            <!--<learn>more_aiml.aiml</learn>-->
        </template>
 
    </category>
 
